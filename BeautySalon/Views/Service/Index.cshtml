@using BeautySalon.Constants
@model BeautySalon.Contracts.CatalogServiceVM

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container text-center p-2">
    <h2 style="text-align:center">@Model.Title</h2>
    <h3 style="text-align:center">@Messages.SERVICES_LABEL</h3>
 </div>

    <div class="mb-3 mx-auto">
            @using (Html.BeginForm("Index", "Service", FormMethod.Get, new {@class="w-50 mx-auto"}))
            {
                @Html.Hidden("catalogId")
                <div class="input-group w-100">
                @Html.TextBox("name", null, new {@style="width:75%; border:none; background-color:lightgray;"})
                <input type="submit" class="form-control" placeholder="Search" value="@Messages.SEARCH_LABEL" aria-label="Search" aria-describedby="search-addon" />
                </div>
            }
    </div>
<div class="column">
    @foreach(var item in Model.Services)
        {
           <div class="card mb-3 mx-auto w-50 h-100">
                    <img src="~/images/beauty1.jpeg" class="card-img-top" alt="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem =>item.Name) - @Html.DisplayFor(modelItem =>item.Price)$</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem=>item.Duration) min</p>
                    <p class="card-text"><small>@Html.DisplayFor(modelItem =>item.Description)</small></p>
                    <a class="btn btn-success" href="@Url.Action("Details", "Service", new {serviceId=item.Id})" role="button">@Messages.SHOW_SERVICE</a>
                </div>
            </div>
        }
</div>
