@using BeautySalon.Constants
@model BeautySalon.Contracts.UserUpdateVM
@{
    ViewBag.Title = "Profile";
}

@Html.Hidden("message", (object)ViewBag.Message)

<section class="vh-100 gradient-custom" style="margin-bottom:300px;">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Edit your profile</h3>
                        <form id="registration_form" action="@Url.Action("Profile", "User")" method="post">
                            <div class="row">
                                <div class="mb-4">

                                    <div class="form-outline">
                                        <input type="text" id="firstName" name="FirstName" placeholder="First name" class="form-control form-control-lg" value="@Model.FirstName" />
                                        <label class="form-label" for="firstName">@Messages.FIRST_NAME_LABEL</label>
                                        <br />
                                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <div class="mb-4">

                                    <div class="form-outline">
                                        <input type="text" id="lastName" name="LastName" placeholder="Last name" class="form-control form-control-lg" value="@Model.LastName" />
                                        <label class="form-label" for="lastName">@Messages.LAST_NAME_LABEL</label>
                                        <br />
                                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="mb-4 d-flex align-items-center">

                                    <div class="form-outline datepicker w-100">
                                        <input type="date" id="birthdayDate" name="BirthDate" class="form-control form-control-lg" value="@Model.BirthDate.ToString("yyyy-MM-dd")" />
                                        <label for="birthdayDate" class="form-label">@Messages.BIRTH_DATE_LABEL</label>
                                        <br />
                                        @Html.ValidationMessageFor(m => m.BirthDate, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <div class="mb-4">

                                    <h6 class="mb-2 pb-1">Gender: </h6>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="Gender" id="femaleGender"
                                               value="Female" checked value="@Model.Gender" />
                                        <label class="form-check-label" for="femaleGender">Female</label>
                                    </div>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="Gender" id="maleGender"
                                               value="Male" value="@Model.Gender" />
                                        <label class="form-check-label" for="maleGender">Male</label>
                                    </div>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="Gender" id="otherGender"
                                               value="Other" value="@Model.Gender" />
                                        <label class="form-check-label" for="otherGender">Other</label>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="mb-4 pb-2">

                                    <div class="form-outline">
                                        <input type="text" id="emailAddress" name="Email" placeholder="example@mail.com" class="form-control form-control-lg" value="@Model.Email" />
                                        <label class="form-label" for="emailAddress">@Messages.EMAIL_LABEL</label>
                                        <br />
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <div class="mb-4 pb-2">

                                    <div class="form-outline">
                                        <input type="tel" id="phoneNumber" name="PhoneNumber" placeholder="000 000 000" class="form-control form-control-lg" value="@Model.PhoneNumber" />
                                        <label class="form-label" for="phoneNumber">@Messages.PHONE_NUMBER_LABEL</label>
                                        <br />
                                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <div class="text-center">
                                    <a href="@Url.Action("ChangePassword", "User")">Change password</a>
                                </div>
                            </div>
                            <div class="mt-4 pt-2">
                                <input class="btn btn-success" type="submit" value="Save changes" onsubmit="required(input)" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    window.onload = function () {
        var value = $("#message").val();
        if (value)
        {
            alert(value);
        }
    };
</script>
