@using BeautySalon.Constants;
<header class="text-white">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Catalog" asp-action="Index"><i class="fa-solid fa-crown text-white"></i></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
			</button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        @if (User.Identity.IsAuthenticated)
                        {
                        <a class="nav-link text-white" asp-area="" asp-controller="Catalog" asp-action="Index">@Messages.CATALOG</a>
                        }
                        else
                        { 
                        <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Register">@Messages.SIGN_UP</a>
                        }
                    <li class="nav-item">
                        @if (User.Identity.IsAuthenticated)
                        {
					    <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Logout">@Messages.LOG_OUT</a>
                        }
                        else
                        {
                        <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Login">@Messages.LOG_IN</a>
                        }
                    </li>

                </ul>
            </div>
        </div>
    </nav>
</header>
